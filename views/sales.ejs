        <style>


            .card{
              border-color:black;
              border-radius: 10%;
            }            

            .card-img-top{
              position: relative;
              border-radius: 7.5% 7.5% 0 0;
            }

            .text-into-d30{
              position: absolute;
              z-index:99;
              font-size:130%;
              font-weight: 900;
              margin: 3%;
              color:yellow;
              display: flex;
              
            }

            .d30 {
              border-radius: 7.5% 0 0;
              position: absolute;
              display: inline-block;
              z-index: 98;
              border-width: 50px 30px 20px;
              border-style: solid;
              border-color: #E95557 #E95557 transparent;
            }

            .text-mont{
                font-family: 'Montserrat';
            } 

            .left-side{
                position:absolute;
                left:80%;
            }
            .new-price{
                font-size:1.5vw;
            }
            .old-price{
                background-color: rgba(255, 166, 0, 0.629);
                
                text-decoration: line-through;
                font-size:0.7vw;
            }

            .url-sale{
                color:rgb(255, 255, 255);
                text-decoration: none;
            }

            .url-sale:hover{
                color:rgb(0, 0, 0);
                text-decoration: none;
            }

            @media screen and (max-width: 1980px) {
            .card{
              width: 18rem;
            }
          }

        @media screen and (max-width: 1380px) {
          .card{
            width:20vw;
          }
        } 
        @media screen and (max-width: 425px) {
          .card{
            width:60vw;
            
          }
        } 


        </style>
